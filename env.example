# Smart Detection System Environment Configuration

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=sqlite:///data/smart_detection.db

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=True

# Threat Intelligence APIs
VIRUSTOTAL_API_KEY=your-virustotal-api-key
URLVOID_API_KEY=your-urlvoid-api-key
ABUSE_CH_API_KEY=your-abuse-ch-api-key

# Monitoring Configuration
ENABLE_MONITORING=True
ALERT_EMAIL=admin@company.com
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Security Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
RATE_LIMIT_PER_MINUTE=60
ENABLE_CORS=True

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/smart_detection.log
MAX_LOG_SIZE=10485760  # 10MB
BACKUP_COUNT=5

# Model Configuration
MODEL_UPDATE_INTERVAL=3600  # 1 hour
MODEL_RETRAIN_THRESHOLD=1000  # Retrain after 1000 new samples

# Performance Configuration
MAX_WORKERS=4
CACHE_TTL=300  # 5 minutes
REQUEST_TIMEOUT=30  # 30 seconds
